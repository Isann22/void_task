<div class="col-md-6 col-lg-5">
    <div style="background: rgba(255, 255, 255, 0.9); border-radius: 15px; padding: 40px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2); backdrop-filter: blur(5px);">
        <div style="text-align: center; margin-bottom: 30px;">
            <h2 style="color: #333; font-weight: 700; margin-bottom: 10px;">Join Us Today</h2>
            <p style="color: #666;">Create your account in just 1 minute</p>
        </div>



        <% if (error && error.length) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <% if (errors && errors.length) { %>
            <div class="alert alert-danger" role="alert">
                <ul style="margin-bottom: 0;">
                    <% errors.forEach(error => { %>
                        <li><%= error.message %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <% if (success && success.length) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <form action="/api/users/register" method="POST">
            <div class="mb-4" style="position: relative;">
                <label for="email" class="form-label" style="font-weight: 500; color: #555;">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com" required
                       value="<%= formData && formData.email ? formData.email : '' %>"
                       style="padding: 12px 15px; border-radius: 8px; border: 1px solid #ddd; transition: all 0.3s;">
                <div style="position: absolute; right: 15px; top: 38px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#999" viewBox="0 0 16 16">
                        <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z"/>
                    </svg>
                </div>
            </div>

            <div class="mb-4" style="position: relative;">
                <label for="username" class="form-label" style="font-weight: 500; color: #555;">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="cool_username" required
                       value="<%= formData && formData.username ? formData.username : '' %>"
                       style="padding: 12px 15px; border-radius: 8px; border: 1px solid #ddd; transition: all 0.3s;">
                <div style="position: absolute; right: 15px; top: 38px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#999" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
                    </svg>
                </div>
            </div>

            <div class="mb-4" style="position: relative;">
                <label for="password" class="form-label" style="font-weight: 500; color: #555;">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required
                       style="padding: 12px 15px; border-radius: 8px; border: 1px solid #ddd; transition: all 0.3s;">
                <div style="position: absolute; right: 15px; top: 38px;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#999" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                    </svg>
                </div>
            </div>

            <button type="submit" class="btn w-100 py-2"
                    style="background: linear-gradient(to right, #667eea, #764ba2); color: white; font-weight: 600; border: none; border-radius: 8px; margin-top: 10px; transition: all 0.3s;">
                Create Account
            </button>

            <div style="text-align: center; margin-top: 25px; color: #666; font-size: 14px;">
                Already have an account?
                <a href="/login" style="color: #667eea; text-decoration: none; font-weight: 500;">Sign In</a>
            </div>
        </form>
    </div>
</div>